{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build ToyDB",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/clang++ -fcolor-diagnostics -fansi-escape-codes -g $(find ${workspaceFolder}/src -name '*.cpp') -o ${workspaceFolder}/ToyDB"
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Set the working directory to the workspace folder
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified to support multi-file debugging."
        }
    ],
    "version": "2.0.0"
}