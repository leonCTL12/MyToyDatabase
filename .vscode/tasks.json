{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Program",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/output && /usr/bin/clang++ -std=c++17 -fcolor-diagnostics -fansi-escape-codes -g $(find ${workspaceFolder}/src -name '*.cpp') -o ${workspaceFolder}/output/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Set the working directory to the workspace folder
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified to support multi-file debugging."
        }
    ],
    "version": "2.0.0"
}